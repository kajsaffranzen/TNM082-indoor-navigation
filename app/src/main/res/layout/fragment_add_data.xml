<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.firebazzze.tnm082_indoor_navigation.CreatePOIFragment">

    <!-- TODO: Update blank fragment layout -->
    <EditText
        android:id="@+id/POIname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:layout_gravity="left|top"
        android:layout_marginTop="47dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/POIdesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:layout_below="@+id/POIname" />



    <TextView
        android:id="@+id/cat_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VÃ¤lj kategori"
        android:layout_below="@+id/POIdesc" />

    <ListView
        android:id="@+id/catScroller"
        android:scrollbars="vertical"
        android:divider="@color/dividerColor"
        android:dividerHeight="10px"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_below="@+id/cat_info"></ListView>

    <Button
        android:id="@+id/createPOI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        android:text="Skapa"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
