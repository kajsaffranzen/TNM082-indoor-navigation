<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.firebazzze.tnm082_indoor_navigation.DetailFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Hitta till"
                android:id="@+id/detailFindText"
                android:layout_gravity="center_horizontal|center_vertical"
                android:textSize="15dp"
                android:allowUndo="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detailPoiNameText"
                android:layout_gravity="center_horizontal"
                android:textSize="50dp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detailPoiDescriptionText"
                android:layout_gravity="center_horizontal"
                android:textSize="20dp"
                android:textColor="#000000"/>

            <CheckBox
                android:id="@+id/officalBoxDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Officiell intressepunkt"
                android:layout_gravity="center_horizontal"
                android:textSize="10pt"
                android:textColor="@color/colorQRText" />

        </LinearLayout>


        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#e6e6e6"
            android:paddingBottom="15dp">

            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scrollbars="vertical"
                android:fadeScrollbars="false" />

            <ImageButton
                android:paddingTop="15dp"
                android:id="@+id/detailDoneButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/path_done_button"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>
    </RelativeLayout>

</FrameLayout>